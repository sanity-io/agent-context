{
  "name": "root",
  "version": "1.0.0",
  "scripts": {
    "build": "turbo build",
    "check:format": "prettier --check .",
    "check:lint": "turbo run check:lint --continue",
    "check:lint:fix": "turbo run check:lint:fix --continue",
    "check:types": "turbo run check:types",
    "dev": "turbo dev",
    "format:all": "prettier --cache --write .",
    "format:staged": "pretty-quick --staged",
    "prepare": "husky",
    "publish:agent-context": "pnpm --filter=@sanity/agent-context exec release-it",
    "publish:agent-context:preview": "pnpm --filter=@sanity/agent-context exec release-it --dry-run",
    "sync-skill-example": "tsx scripts/sync-skill-example.ts",
    "test:unit": "turbo test:unit",
    "test:unit:coverage": "turbo test:unit:coverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": [
      "pnpm format:staged"
    ]
  },
  "prettier": "@sanity/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@sanity/prettier-config": "^3.0.0",
    "@types/node": "^22.19.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "pretty-quick": "^4.2.2",
    "release-it": "^19.2.4",
    "tsx": "^4.21.0",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.29.3"
}
