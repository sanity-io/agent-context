{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "commitMessage": "v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "main",
    "requireCommits": true
  },
  "npm": {
    "publish": true,
    "publishPath": ".",
    "skipChecks": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "increment": "patch",
  "hooks": {
    "before:init": ["pnpm run build", "pnpm run test"]
  }
}
